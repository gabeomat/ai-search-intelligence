# AI Search Intelligence System Configuration

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/ai_search_intelligence
REDIS_URL=redis://localhost:6379/0

# InfluxDB Configuration (for time-series data)
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your_influxdb_token
INFLUXDB_ORG=your_organization
INFLUXDB_BUCKET=ai_search_intelligence

# API Keys
SERPAPI_KEY=your_serpapi_key
PERPLEXITY_API_KEY=your_perplexity_api_key

# Security
SECRET_KEY=your_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=False
API_RELOAD=False

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Rate Limiting
SERPAPI_RATE_LIMIT=100  # requests per hour
PERPLEXITY_RATE_LIMIT=1000  # requests per hour

# Data Collection Settings
DEFAULT_COLLECTION_INTERVAL=3600  # seconds (1 hour)
MAX_QUERIES_PER_BATCH=50
CITATION_RETENTION_DAYS=365

# Content Analysis Settings
MIN_CONTENT_SCORE_THRESHOLD=0.5
MAX_CONTENT_AGE_DAYS=30
ENABLE_ML_PREDICTIONS=True

# Monitoring & Logging
LOG_LEVEL=INFO
PROMETHEUS_PORT=8001
ENABLE_METRICS=True

# n8n Integration
N8N_WEBHOOK_BASE_URL=http://localhost:5678/webhook
N8N_API_KEY=your_n8n_api_key

# Development Settings
DEVELOPMENT_MODE=False
MOCK_EXTERNAL_APIS=False
ENABLE_DEBUG_ENDPOINTS=False